<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@transition/slide_left</item>
        <item name="android:windowExitAnimation">@transition/slide_right</item>
    </style>
    <style name="DialogAnimation_2">
        <item name="android:windowEnterAnimation">@transition/slide_up</item>
        <item name="android:windowExitAnimation">@transition/slide_bottom</item>
    </style>

</resources>
